<h1>Hospitals</h1>

<p id="notice"><%= notice %></p>

<table class="table" id="datatables">
  <thead>
    <tr>
      <th>Hospital name</th>
      <th>Hospital address</th>
      <th>Hospital phone</th>
      <th>Hospital email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @hospitals.each do |hospital| %>
      <tr>
        <td><%= hospital.hospital_name %></td>
        <td><%= hospital.hospital_address %></td>
        <td><%= hospital.hospital_phone %></td>
        <td><%= hospital.hospital_email %></td>
        <td><%= link_to 'Show', hospital, class: "btn btn-sm-primary" %></td>
        <td><%= link_to 'Edit', edit_hospital_path(hospital), class: "btn btn-sm-primary" %></td>
        <td><%= link_to 'Destroy', hospital, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hospital', new_hospital_path, class: "btn btn-primary" %>
