<h1>Doctors</h1>

<table class="table" id="datatables">
  <thead>
    <tr>
      <th>Doctor name</th>
      <th>Specialality</th>
      <th></th>
      <th></th>
      <!-- <th></th> -->
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.doctor_name %></td>
        <td><%= doctor.specialality %></td>
        <td><%= link_to 'Show', doctor, class: "btn btn-sm-primary" %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor), class: "btn btn-sm-primary" %></td>
        <!-- <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

