<p id="notice"><%= notice %></p>

<h1>Clinics</h1>

<table class="table" id="datatables">
  <thead>
    <tr>
      <th>Clinic name</th>
      <th>Clinic address</th>
      <th>Clinic phone</th>
      <th>Clinic email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @clinics.each do |clinic| %>
      <tr>
        <td><%= clinic.clinic_name %></td>
        <td><%= clinic.clinic_address %></td>
        <td><%= clinic.clinic_phone %></td>
        <td><%= clinic.clinic_email %></td>
        <td><%= link_to 'Show', clinic, class: "btn btn-sm-primary" %></td>
        <td><%= link_to 'Edit', edit_clinic_path(clinic), class: "btn btn-sm-primary" %></td>
        <td><%= link_to 'Destroy', clinic, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

