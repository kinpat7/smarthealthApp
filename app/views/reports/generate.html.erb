<h1>Reports</h1>
<h2>Filter to display Checkups...</h2>
<br>
<%= form_tag("/reports/display", method: "post", role:"form") do %>

<div class="form-group">
    <%= label_tag(:from, "Date From:") %>
     <%= date_field_tag(:from, Date.today, class:"form-control")%>
     </div>

     <div class="form-group">
      <%= label_tag(:to, "Date to:") %>
     <%= date_field_tag(:to, Date.today, class:"form-control")%>
     </div>

     <div class="form-group">
     <%= label_tag(:clinic, "Clinic:") %>
     <%= select_tag( "clinic", options_from_collection_for_select(Clinic.all, "id", "clinic_name"),class:"form-control" )%>
     </div>

  <div class="actions">
    <%= submit_tag("Display Report") %>
    </div>

  <% end %>
