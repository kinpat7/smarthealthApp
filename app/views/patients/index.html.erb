<p id="notice"><%= notice %></p>

<h1>Patients</h1>

<table class="table" id="datatables">
  <thead>
    <tr>
      <th>Patient name</th>
      <th>Dob</th>
      <th>Address</th>
      <th>Phone no</th>
      <th>Special observation</th>
      <th></th>
      <th></th>

    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.patient_name %></td>
        <td><%= patient.dob %></td>
        <td><%= patient.address %></td>
        <td><%= patient.phone_no %></td>
        <td><%= patient.special_observation %></td>
        <td><%= link_to 'Show', patient, class: "btn btn-sm-primary" %> </td>
        <td><%= link_to 'Edit', edit_patient_path(patient), class: "btn btn-sm-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Patient', new_patient_path, class: "btn btn-primary" %>
