<%= form_for([@patient, @checkup]) do |f| %>
<% if @checkup.errors.any? %>
<div id="error_explanation">
<h2><%= pluralize(@checkup.errors.count, "error")%>
prohibited this checkup from being saved:</h2>
<ul>
<% @checkup.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
</div>
<% end %>
<div class="field">
<p>
<%= f.label :Summary %><br />
<%= f.text_field :summary %>
</p>
</div>

<div class="form-group">
  <%= f.label :Doctor %><br />
  <%= f.collection_select :doctor_id, Doctor.all, :id, :doctor_name, :prompt => "Select a doctor", class:"form-control" %>
  </div>

<div class="field">
<p>
<%= f.label :Date %><br />
<%= f.date_field :date %>
</p>
</div>

<div class="field">
<p>
<%= f.label :Time %><br />
<%= f.time_field :time %>
</p>
</div>

<div class="form-group">
  <%= f.label :Clinic %><br />
  <%= f.collection_select :clinic_id, Clinic.all, :id, :clinic_name, :prompt => "Select a Clinic", class:"form-control" %>
  </div>

<div class="actions">
<%= f.submit %>
</div>
<% end %>
